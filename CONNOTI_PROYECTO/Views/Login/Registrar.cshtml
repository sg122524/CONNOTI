@model Capa_Modelo.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>Registrar Usuario</h2>
                @using (Html.BeginForm("Registrar", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nombres)
                        @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Apellidos)
                        @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Correo)
                        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Clave)
                        @Html.PasswordFor(m => m.Clave, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmarClave)
                        @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</body>
</html>
