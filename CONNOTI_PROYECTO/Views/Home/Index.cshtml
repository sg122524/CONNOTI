@{
    ViewBag.Title = "Home Page";
}

<style>

    .notification-button {
        background-color: #8B0000; /* Cambia el color a un rojo más oscuro */
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-top: 10px;
        cursor: pointer;
    }
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .jumbotron {
        background-color: #171a29;
        color: white;
        padding: 20px 0 40px; /* Adjust padding as needed */
        text-align: center;
        position: relative; /* Make background extend full width */
    }

        .jumbotron::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%; /* Cover entire jumbotron element */
            background-color: #171a29; /* Same color as jumbotron */
            z-index: -1; /* Place behind jumbotron content */
        }

    .product-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        /* Removed width property */
        margin: 0 auto;
    }

    .product-item {
        border: 1px solid #ddd;
        padding: 10px;
        margin: 10px;
        flex-basis: 30%;
    }

        .product-item img {
            width: 100%;
            height: auto;
        }

    .product-info {
        padding: 10px;
    }

        .product-info h3 {
            margin: 0;
            font-size: 18px;
        }

        .product-info p {
            margin-top: 5px;
            color: #999;
        }
</style>

<div class="jumbotron" style="background-color: #171a29; color: white;">
